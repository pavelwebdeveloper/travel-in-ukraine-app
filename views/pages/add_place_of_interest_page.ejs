<h2>You can add a new place of interest here</h2>


<form>
    <fieldset>
     
     <label>Name</label><br>
     <input type="text" name="placeOfInterestName" id="placeOfInterestName" pattern="[A-za-z\s]{3,}" required><br>
     <label>Description</label><br>
     <textarea name="placeOfInterestDescription" id="placeOfInterestDescription" rows="10" cols="43" placeholder="Please, describe the new place of interest." required></textarea><br>
     <label>Location Name</label><br>
     <input type="text" name="placeOfInterestLocationName" id="placeOfInterestLocationName" required><br>
     <label>Locationid</label><br>
     <input type="number" name="placeOfInterestLocationId" id="placeOfInterestLocationId" required><br>
     <label class="number">Price for Visit</label><br>
     <input type="number" name="placeOfInterestPriceForVisit" id="placeOfInterestPriceForVisit" required><br>
     <label>Location Map</label><br>
     <input type="text" name="placeOfInterestLocationMap" id="placeOfInterestLocationMap" required><br>
     <label>Open Hours</label><br>
     <input type="text" name="placeOfInterestOpenHours" id="placeOfInterestOpenHours" pattern="[A-Za-z-\s]{3,}" required><br>
     <label>Phone Number</label><br>
     <input type="number" name="placeOfInterestPhoneNumber" id="placeOfInterestPhoneNumber" pattern="[A-Za-z-\s]{3,}" required><br>
     <label>Website</label><br>
     <input type="text" name="placeOfInterestWebsite" id="placeOfInterestWebsite" pattern="[A-Za-z]{3,}" required><br>
	 <label>Image (path to image)</label><br>
     <input type="text" name="placeOfInterestImage" id="placeOfInterestImage" pattern="[a-z-.\/]{3,}" required><br><br>
     <button class="submitBtn" onclick="addPlaceOfInterest()">Add Place of Interest</button><br>
    </fieldset>
    

   </form>